<!DOCTYPE html>
<html>
<head>
  <title>Shoutr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<style>
  #container {
    width:600px;
    position:relative;
    overflow:auto;
    margin: 0 auto;
    border:1px solid black;
    border-radius:10px;
    padding:15px;
  }
  .shout {
  }
  .section {
    margin-left: 25%;
  }
  img {
    max-height:250px;
    max-width:250px;
    border:3px solid black;
  }
  .caption {
    font-size:160%
  }
  #main {
    width:600px;
    border:5px solid black;
  }
  .nav-text {
    font-family:"Arial", sans-serif;
    text-align:center;
    font-size:145%;
  }
  .title {
    text-align:center;
    font-size:150%;
    color:green;
  }
  .sign-in {
    float:right;
  }
  .search-bar {
    float:left;
  }
  .shout-section {
    width:250px;
    height:100px;
    border:2px solid black;
    border-radius:15px;
    padding:10px;
    margin:10px;
    float:left;
    display: inline-block;
  }
</style>
<body>
  <div id="container">

    <div class="search-bar">
      <p>
      <%= form_tag :search, method: :get do %>
        <%= text_field_tag :query %>
        <%= submit_tag "SEARCH" %>
      <% end %>
    </div>

    <div class="sign-in">
      <% if signed_in? %>
        Signed-in as: <%= current_user.email %>
        <%= button_to "Sign Out", session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign In", new_session_path %>
        <%= link_to "Sign Up", new_user_path %>
      <% end %>
    </div>

    <div class="nav-text">
      <p><br>
      <div class="title">Shoutr!</div>
      <%= link_to "Home", shouts_path %>
      <%= link_to "Users", users_path %>
      <%= link_to "Followers", followers_path %>
      <p>
    </div>

    <%= yield %>

  </div>
</body>
</html>
